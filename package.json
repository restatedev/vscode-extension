{
  "name": "restate-vscode",
  "displayName": "restate-vscode",
  "description": "Restate",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "restate-vscode.toggleServer",
        "title": "Restate Server: Start/Stop"
      },
         {
        "command": "restate-vscode.openUI",
        "title": "Restate Server: Open UI"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Restate",
      "properties": {
        "restate.serverEnv": {
          "type": "object",
          "default": {
            	"RESTATE_ADMIN__experimental_feature_force_journal_retention": "365days",
		          "RESTATE_WORKER__INVOKER__INACTIVITY_TIMEOUT": "1day"
          },
          "description": "Environment variables to inject when starting the Restate server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
